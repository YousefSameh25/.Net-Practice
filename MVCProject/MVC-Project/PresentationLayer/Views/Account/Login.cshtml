@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All">  </div>

<div class="main-w3layouts wrapper">
    <div class="main-agileinfo">
        <div class="agileits-top">
            <form asp-action="Login" method="post">

                <div class="form-group">
                    <input type="text" class="form-input" asp-for="Email" placeholder=" Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <input type="text" class="form-input" asp-for="Password" placeholder=" Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />

                <div class="wthree-text">
                    <label class="anim">
                        <input asp-for="RememberMe" class="checkbox">
                        <span> Remember Me </span>
                    </label>
                    <div class="clear"> </div>
                </div>

                <br />

                <input type="submit" value="Login">
            </form>
            <p>Doesn't have an Account? <a asp-action="Register">   Sign up now!</a></p>
            <p> <a asp-action="ForgotPassword"> Forgot Password? </a></p>

        </div>
    </div>
</div>


@section validateSection {
    <partial name="_ValidationScriptsPartial" />
}

