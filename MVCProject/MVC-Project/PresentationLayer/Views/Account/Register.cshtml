@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-w3layouts wrapper">
    <h1>SignUp</h1>
    <div class="main-agileinfo">
        <div class="agileits-top">
            <form asp-action="Register" method="post">
                <div class="form-group">
                    <input type="text" class="form-input" asp-for="FName" placeholder=" First Name" />
                    <span asp-validation-for="FName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="text" class="form-input" asp-for="LName" placeholder=" last Name" />
                    <span asp-validation-for="LName" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <input type="text" class="form-input" asp-for="Email" placeholder=" Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <input type="text" class="form-input" asp-for="Password" placeholder=" Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <input type="text" class="form-input" asp-for="ConfirmPassword" placeholder=" Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <br />

                <div class="wthree-text">
                    <label class="anim">
                        <input asp-for="IsAgree" class="checkbox" required="">
                        <span>I Agree To The Terms & Conditions</span>
                    </label>
                    <div class="clear"> </div>
                </div>
                <br />

                <input type="submit" value="SIGNUP">
            </form>
            <p>Have an Account? <a asp-action="Login"> Login Now!</a></p>
        </div>
    </div>
</div>

@section validateSection {
    <partial name="_ValidationScriptsPartial" />
}

